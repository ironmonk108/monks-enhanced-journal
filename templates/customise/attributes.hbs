<div class="items-list{{#if @root.generalEdit}} general{{/if}}">
    <header>
        {{#if @root.generalEdit}}
        <div class="item-controls"></div>
        {{/if}}
        <div class="item-name">{{localize 'MonksEnhancedJournal.Name'}}</div>
        <div class="item-detail">{{localize 'MonksEnhancedJournal.Shown'}}</div>
        {{#if @root.generalEdit}}
        <div class="item-detail">{{localize 'MonksEnhancedJournal.Full'}}</div>
        <div class="controls">
            <button type="button" class="inline-control icon fas fa-plus-square" data-attribute="sheetSettings.{{type}}.attributes" data-action="addAttribute"></button>
        </div>
        {{/if}}
    </header>

    <ol class="item-list">
        {{#each context as |attribute|}}
        <li class="item flexrow" data-id="sheetSettings.{{../type}}.attributes.{{attribute.id}}">
            {{#if @root.generalEdit}}
            <div class="item-controls">
                <i class="fas fa-bars reorder-attribute" data-attribute="sheetSettings.{{../type}}.attributes" style="cursor:ns-resize;"></i>
            </div>

            <div class="item-name">
                <input type="text" name="sheetSettings.{{../type}}.attributes.{{attribute.id}}.name" class="attribute" autocomplete="off" value="{{attribute.name}}" {{#unless @root.generalEdit}}disabled{{/unless}} />
            </div>
            {{else}}
            <div class="item-name">
                <div for="content">{{localize attribute.name}}</div>
            </div>
            {{/if}}

            <div class="item-detail">
                <input type="checkbox" name="sheetSettings.{{../type}}.attributes.{{attribute.id}}.shown" class="attribute" {{checked attribute.shown}} />
            </div>
            {{#if @root.generalEdit}}
            <div class="item-detail">
                <input type="checkbox" name="sheetSettings.{{../type}}.attributes.{{attribute.id}}.full" class="attribute" {{checked attribute.full}} />
            </div>

            <div class="item-controls flexrow">
                <button type="button" class="inline-control icon fas fa-trash" data-action="removeAttribute"></button>
            </div>
            {{/if}}
        </li>
        {{/each}}
    </ol>
</div>