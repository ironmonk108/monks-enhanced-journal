<div class="monsters" style="height: 100%;">
    <div class="items-list encounter-monsters{{#if showLocation}} show-location{{/if}}">
        <header>
            <div class="button-group flexrow">
                <a class="item-control create-combat" data-tooltip="{{localize 'MonksEnhancedJournal.DragMonstersCombat'}}" data-action="createCombat"><i class="fas fa-fist-raised"></i></a>
                <a class="item-control create-encounter" data-tooltip="{{localize 'MonksEnhancedJournal.DragMonsters'}}" data-action="createEncounter"><i class="fas fa-user-plus"></i></a>
                <a class="item-control select-encounter" data-tooltip="{{localize 'MonksEnhancedJournal.SelectEncounter'}}" data-action="selectEncounter"><i class="fas fa-expand"></i></a>
            </div>
            <div class="item-name monster-name flexrow">
                {{localize 'MonksEnhancedJournal.Monsters'}}
            </div>
            {{#if showLocation}}
            <div class="item-detail item-hidden">{{localize 'MonksEnhancedJournal.Location'}}</div>
            {{/if}}
            <div class="item-detail item-quantity">{{localize 'MonksEnhancedJournal.Quantity'}}</div>
            <div class="item-controls flexrow">
                <a class="item-control roll-table" data-tooltip="{{localize 'MonksEnhancedJournal.PopulateFromRollTable'}}" data-action="rollMonster"><i class="fas fa-th-list"></i></a>
            </div>
        </header>
        {{#if has.monsters}}
        <ol class="item-list" data-container="actors">
            {{#each actors}}
            <li class="item flexrow " data-pack="{{this.pack}}" data-id="{{this.id}}" data-uuid="{{this.uuid}}" data-type="Actor" draggable="false" style="position:relative;">
                <div class="item-name clickable flexrow">
                    <div class="item-image large monster-icon" data-id="{{this.id}}" data-type="Actor" style="background-image: url('{{this.img}}')" draggable="false" data-action="clickMonster"></div>
                    {{#if this.failed}}<i class="fas fa-triangle-exclamation no-actor" data-tooltip="{{localize "MonksEnhancedJournal.msg.CouldNotFindActor"}}"></i>{{/if}}
                    <div class="monster-name">{{this.name}}</div>
                </div>

                {{#if ../showLocation}}
                <div class="item-detail item-location">
                    <input type="text" name="flags.monks-enhanced-journal.actors.{{this.id}}.location" value="{{this.location}}" />
                </div>
                {{/if}}

                <div class="item-detail item-quantity">
                    <input type="text" name="flags.monks-enhanced-journal.actors.{{this.id}}.quantity" value="{{this.quantity}}" style="text-align:center;" />
                </div>

                <div class="item-controls flexrow">
                    <input type="checkbox" name="flags.monks-enhanced-journal.actors.{{this.id}}.lock" {{checked this.lock}} style="display: none;" />
                    <a class="item-control item-action" data-action="lockItem" data-tooltip="{{#if this.lock}}{{localize 'MonksEnhancedJournal.UnlockItem'}}{{else}}{{localize 'MonksEnhancedJournal.LockItem'}}{{/if}}"><i class="fas fa-lock{{#unless this.lock}}-open{{/unless}}"></i></a>
                    <input type="checkbox" name="flags.monks-enhanced-journal.actors.{{this.id}}.hidden" {{checked this.hidden}} style="display:none;" />
                    <a class="item-hide" data-tooltip="{{#if this.hidden}}{{localize 'MonksEnhancedJournal.ShowItem'}}{{else}}{{localize 'MonksEnhancedJournal.HideItem'}}{{/if}}" data-action="hideItem"><i class="fas fa-eye{{#if this.hidden}}-slash{{/if}}"></i></a>
                    <a class="item-control monster-delete" data-tooltip="{{localize 'MonksEnhancedJournal.DeleteMonster'}}" data-action="deleteMonster"><i class="fas fa-trash"></i></a>
                </div>
            </li>
            {{/each}}
        </ol>
        {{else}}
        <div class="instruction">{{#if owner}}{{localize 'MonksEnhancedJournal.msg.DragAnActorToAddToEncounter'}}{{else}}{{localize 'MonksEnhancedJournal.msg.NoMonstersAtTheMoment'}}{{/if}}</div>
        {{/if}}
    </div>
</div>