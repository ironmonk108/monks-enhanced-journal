<div class="offering-list">
    <div class="items-list">
        <header>
            <div class="item-name">Actor</div>
            <div class="item-name">Items</div>
            <div class="item-detail">Status</div>

            <div class="item-controls flexrow">
            </div>

            <div class="item-controls flexrow">
                <a class="item-control" data-tooltip="{{localize 'MonksEnhancedJournal.MakeOffering'}}" data-action="makeOffering"><i class="fas fa-hand-holding-usd"></i></a>
            </div>
        </header>
        <ol class="item-list" data-container="offerings">
            {{#each offerings}}
            <li class="item flexrow{{#if this.done}} complete{{/if}}" data-id="{{this.id}}" data-actor-id="{{this.actorId}}" draggable="false">
                <div class="item-name flexrow">
                    <img class="item-image actor-icon" src="{{this.img}}" data-action="openOfferingActor" />
                    <span>{{this.name}}</span>
                </div>

                <div class="item-name item-offered flexcol">
                    {{#each this.items}}
                    <div class="flexrow" style="width: 100%; line-height: 32px;">
                        <img class="item-image item-icon" src="{{this.img}}" onerror="if ($(this).attr('src') != 'icons/svg/item-bag.svg') { $(this).attr('src', 'icons/svg/item-bag.svg'); }" />
                        <span class="tag">{{{this.name}}}</span>
                    </div>
                    {{/each}}
                </div>

                <div class="item-detail item-offered">
                    <i class="fas {{this.stateIcon}}"></i> {{this.stateName}}
                </div>

                {{#if @root.owner}}
                <div class="item-controls flexrow owner">

                    {{#if (eq this.state "offering")}}
                    <button type="button" class="icon fas fa-check" data-tooltip="{{localize 'MonksEnhancedJournal.AcceptOffering'}}" data-action="acceptOffer"></button>
                    <button type="button" class="icon fas fa-times" data-tooltip="{{localize 'MonksEnhancedJournal.RejectOffering'}}" data-action="rejectOffer"></button>
                    {{/if}}
                </div>

                <div class="item-controls flexrow owner">
                    <input type="checkbox" name="offerings.{{this.id}}.hidden" {{checked this.hidden}} style="display:none;" />
                    <a class="item-control item-private" data-tooltip="{{localize 'MonksEnhancedJournal.HideShowOffering'}}" data-action="hideItem"><i class="fas fa-eye{{#if this.hidden}}-slash{{/if}}"></i></a>
                    <a class="item-control item-delete" data-tooltip="{{localize 'MonksEnhancedJournal.RemoveOffering'}}" data-action="deleteItem"><i class="fas fa-trash"></i></a>
                </div>
                {{else}}
                <div></div>
                <div class="item-controls flexrow">
                    {{#if this.owner}}
                    {{#if this.hidden}}
                    <i class="fas fa-eye-slash"></i>
                    {{/if}}
                    {{#if (eq this.state "offering")}}
                    <a class="item-control item-cancel" data-tooltip="{{localize 'MonksEnhancedJournal.CancelOffering'}}" data-action="cancelOffer"><i class="fas fa-trash"></i></a>
                    {{/if}}
                    {{/if}}
                </div>
                {{/if}}
            </li>
            {{/each}}
        </ol>
    </div>
</div>