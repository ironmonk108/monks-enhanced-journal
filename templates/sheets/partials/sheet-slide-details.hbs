<div style="height: 100%; overflow-y: auto;">
    <div class="form-group">
        <label for="flags.monks-enhanced-journal.showas">{{localize 'MonksEnhancedJournal.ShowAs'}}</label>
        <div class="form-fields">
            <select name="flags.monks-enhanced-journal.showas">
                {{ selectOptions showasOptions selected=data.flags.monks-enhanced-journal.showas }}
            </select>
        </div>
    </div>
    <div class="form-group">
        <label>{{localize 'MonksEnhancedJournal.Loop'}}</label>
        <div class="form-fields" style="justify-content:flex-end;">
            <input type="checkbox" name="flags.monks-enhanced-journal.loop" {{checked data.flags.monks-enhanced-journal.loop}}>
        </div>
    </div>
    <div class="form-group">
        <label for="canvascolor">{{localize 'MonksEnhancedJournal.CanvasColour'}}</label>
        <div class="form-fields" style="justify-content: flex-end;">
            <color-picker name="flags.monks-enhanced-journal.canvascolor" value="{{data.flags.monks-enhanced-journal.canvascolor}}" style="flex: 0 0 140px;"></color-picker>
        </div>
    </div>
    <header class="form-header" style="font-size:16px;">
        <div><i class="fas fa-music"></i> {{localize 'MonksEnhancedJournal.Audio'}}</div>
    </header>
    <div class="form-group">
        <label for="audiofile">{{localize 'MonksEnhancedJournal.Playlist'}}</label>
        <div class="form-fields">
            <select name="flags.monks-enhanced-journal.playlist">
                {{ selectOptions playlists selected=data.flags.monks-enhanced-journal.playlist blank="" valueAttr="id" labelAttr="name" }}
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="audiofile">{{localize 'MonksEnhancedJournal.AudioFile'}}</label>
        <div class="form-fields">
            <file-picker class="image" style="border-color:#7a7971;" type="audio" name="flags.monks-enhanced-journal.audiofile" placeholder="path/audio.mp3" value="{{data.flags.monks-enhanced-journal.audiofile}}"></file-picker>
        </div>
    </div>
    <div class="form-group">
        <label style="flex: 6;">{{localize 'MonksEnhancedJournal.PausePlaylists'}}</label>
        <div class="form-fields" style="justify-content:flex-end;">
            <input type="checkbox" name="flags.monks-enhanced-journal.pauseplaylist" {{checked data.flags.monks-enhanced-journal.pauseplaylist}}>
        </div>
    </div>
    <div class="form-group">
        <label>{{localize 'MonksEnhancedJournal.Loop'}}</label>
        <div class="form-fields" style="justify-content:flex-end;">
            <input type="checkbox" name="flags.monks-enhanced-journal.loopaudio" {{checked data.flags.monks-enhanced-journal.loopaudio}}>
        </div>
    </div>
    <div class="form-group">
        <label for="volume">{{localize 'MonksEnhancedJournal.Volume'}}</label>
        <div class="form-fields">
            <range-picker name="flags.monks-enhanced-journal.volume" min="0" max="1" step="0.1" value="{{ data.flags.monks-enhanced-journal.volume }}"></range-picker>
        </div>
    </div>
    <header class="form-header" style="font-size:16px;">
        <div><i class="fas fa-running"></i> {{localize 'MonksEnhancedJournal.Transition'}}</div>
    </header>
    <div class="form-group">
        <label for="transition.effect">{{localize 'MonksEnhancedJournal.Effect'}}</label>
        <div class="form-fields">
            <select name="flags.monks-enhanced-journal.transition.effect">
                {{ selectOptions effectOptions selected=data.flags.monks-enhanced-journal.transition.effect localize=true }}
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="transition.duration">{{localize 'MonksEnhancedJournal.Duration'}}</label>
        <div class="form-fields" style="justify-content:flex-end;">
            <input type="number" name="flags.monks-enhanced-journal.transition.duration" value="{{data.flags.monks-enhanced-journal.transition.duration}}" style="height: 28px; flex: 0 0 60px; text-align: right;">
            <label style="flex: 0 0 60px;">{{localize 'MonksEnhancedJournal.seconds'}}</label>
        </div>
    </div>
    <header class="form-header" style="font-size:16px;">
        <div><i class="fas fa-font"></i> {{localize 'MonksEnhancedJournal.Font'}}</div>
    </header>
    <div class="form-group">
        <label for="font.name">{{localize 'MonksEnhancedJournal.Font'}}</label>
        <div class="form-fields">
            <select name="flags.monks-enhanced-journal.font.name">
                {{ selectOptions fontOptions selected=data.flags.monks-enhanced-journal.font.name localize=true }}
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="font.size">{{localize 'MonksEnhancedJournal.Size'}}</label>
        <div class="form-fields" style="justify-content:flex-end;">
            <input type="number" name="flags.monks-enhanced-journal.font.size" value="{{data.flags.monks-enhanced-journal.font.size}}" style="height: 28px; flex: 0 0 60px; text-align: right;">
        </div>
    </div>
    <div class="form-group">
        <label for="flags.monks-enhanced-journal.font.color">{{localize 'MonksEnhancedJournal.TextColour'}}</label>
        <div class="form-fields">
            <color-picker name="flags.monks-enhanced-journal.font.color" value="{{data.flags.monks-enhanced-journal.font.color}}" style="flex: 0 0 140px;"></color-picker>
        </div>
    </div>
</div>